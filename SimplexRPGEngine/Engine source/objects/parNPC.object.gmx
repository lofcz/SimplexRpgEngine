         if (quest_state != quest_noone) { draw_sprite_ext(sQuest,quest_state+1,x+16-16,y-12-act_alpha*5-24,1,1,0,c_white,act_alpha);}
        
       }
   
     if (keyboard_check_pressed(ord("E")) &amp;&amp; act_alpha &gt;= 1 &amp;&amp; !talking)
