{body_angle+= median(-6, 6, (((((point_direction(x,y,mouse_x,mouse_y)) - body_angle) mod 360) + 540) mod 360) - 180)}


}
// update old mouse positions
oldx = mouse_x;
oldy = mouse_y;


}
    if movement=1 { // if the 2nd style movement is selected from create event:
